<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../views/partials/navegacion'); %>
</head>
<body>
  <div class="container mt-4">   
    <div class="card border-secondary">  
      <div class="card-header">Nuevo Registro</div>
        <div class="card-body">
          <form action="/save" method="POST">
            <div class="mb-3">
              <label for="titulo" class="form-label">Titulo</label>
              <input type="text" class="form-control" id="titulo" name="titulo"  tabindex="1" onchange="valida_vacio()">
            </div>   
            <div class="mb-3">
              <label for="descripcion" class="form-label">Descripcion</label>
              <textarea rows="10" type="text" class="form-control" id="descripcion" name="descripcion" tabindex="2"></textarea>
            </div>
            <div class="mb-3">
              <label for="titulo" class="form-label">Estado</label>
              <select id="estado" name="estado" class="form-select" aria-label="Default select example" tabindex="3">
                <option value="pendiente" selected>Pendiente</option>
                <option value="completado">Completado</option>                    
              </select>
            </div>           
              <input id="guardar" type="submit" class="btn btn-primary" tabindex="4" value="Guardar" disabled>
              <a href="/" class="btn btn-secondary">Cancelar</a>
          </form>
        </div>
    </div>        
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/js/bootstrap.bundle.min.js"></script>
  <!--  script donde valida vacios -->
  <script type="text/javascript" src="/js/valida.js"></script>
</body>
</html>

